<UserControl x:Class="DavigoldExcel.Controls.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DavigoldExcel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="673.125" d:DesignWidth="473.75">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#C1C7CD" />
            <Setter Property="FontFamily" Value="DM Sans"/>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="8"
                                Padding="2">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="270" Color="#C1C7CD" Opacity="0.4" BlurRadius="6" />
                            </Border.Effect>
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image
                                       Width="15" Height="15" 
                                       VerticalAlignment="Center" 
                                       Margin="8,0,8,0" Source="/DavigoldExcel;component/Images/search.png" />
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1"/>
                                <TextBlock x:Name="PlaceholderTextBlock"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="LightGray"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"
                                           Grid.Column="1"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- CustomCheckBoxStyle Checkbox -->
        <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Width="18" 
                                    Height="18" 
                                    CornerRadius="5" 
                                    Background="White"
                                    BorderBrush="LightGray" 
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Path x:Name="checkTick" 
                                  Data="M 0,5 L 5,10 L 10,0"
                                  Stroke="White" 
                                  StrokeThickness="2" 
                                  Visibility="Collapsed" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Width="10" 
                                  Height="9"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0BA5EC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0BA5EC"/>
                                <Setter TargetName="checkTick" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
        </Style>
        <!-- ComboBoxToggleButton ControlTemplate -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Border x:Name="templateRoot" BorderBrush="#0BA5EC" BorderThickness="1" Background="{TemplateBinding Background}" CornerRadius="5" Padding="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" ContentStringFormat="{TemplateBinding ContentStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    <Path x:Name="Arrow" Data="M 0 0 L 4 4 L 8 0 Z" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,4,0" Grid.Column="1" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="templateRoot" Property="Background" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="templateRoot" Property="Background" Value="White" />
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="templateRoot" Property="Background" Value="White" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ComboBoxTextBox Style -->
        <Style x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="AllowDrop" Value="True" />
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="MinHeight" Value="0" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="templateRoot" Background="White" BorderBrush="#0BA5EC" BorderThickness="1" SnapsToDevicePixels="True" CornerRadius="5" Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="WhiteBackgroundComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Template="{StaticResource ComboBoxToggleButton}"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press"
                                          Background="White"/>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="3,3,23,3"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{StaticResource ComboBoxTextBox}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="3,3,23,3"
                                     Focusable="True"
                                     Background="White"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#0BA5EC"
                                            CornerRadius="5"
                                            Padding="5"/>
                                    <ScrollViewer Margin="4,6,4,6"
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="AllowsTransparency" Value="True">
                                <Setter TargetName="DropDownBorder" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#0BA5EC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Margin" Value="0,3,0,3"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <local:MultiListCountToVisibilityConverter x:Key="MultiListCountToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="5" Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" FontFamily="DM Sans">
            <StackPanel>
                <StackPanel Margin="5">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="LanguageToggle" 
                                 Grid.Column="0"
                                 Style="{StaticResource CustomCheckBoxStyle}" 
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center"
                                 Checked="LanguageToggle_Checked"
                                 Unchecked="LanguageToggle_Unchecked"/>
                        <TextBlock Text="English" 
                                  x:Name="LanguageText" 
                                  Grid.Column="1"
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Normal"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <DatePicker x:Name="FilterDatePicker" 
                                   Grid.Column="2"
                                   Height="35"
                                   HorizontalAlignment="Stretch">
                            <DatePicker.Style>
                                <Style TargetType="DatePicker">
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontFamily" Value="DM Sans"/>
                                    <Setter Property="BorderBrush" Value="#0BA5EC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="Padding" Value="8" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DatePicker">
                                                <Grid>
                                                    <Border
                                                        x:Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Height="{TemplateBinding Height}"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <DatePickerTextBox
                                                                x:Name="PART_TextBox"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Stretch"
                                                                FontSize="{TemplateBinding FontSize}"
                                                                FontFamily="{TemplateBinding FontFamily}"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Padding="8,0,0,0"
                                                                Foreground="Black"
                                                                IsReadOnly="True"
                                                                Focusable="False"/>
                                                            <Button
                                                                x:Name="PART_Button"
                                                                Grid.Column="1"
                                                                Content="📅"
                                                                Width="35"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                FontSize="16"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Cursor="Hand"
                                                                Margin="0,0,4,0"
                                                                Focusable="False"/>
                                                        </Grid>
                                                    </Border>
                                                    <Popup
                                                        x:Name="PART_Popup"
                                                        Placement="Bottom"
                                                        PlacementTarget="{Binding ElementName=Border}"
                                                        AllowsTransparency="True"
                                                        IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                        StaysOpen="False">
                                                        <Border
                                                            Background="White"
                                                            BorderBrush="#0BA5EC"
                                                            BorderThickness="2"
                                                            CornerRadius="8"
                                                            Padding="5">
                                                            <Calendar
                                                                x:Name="PART_Calendar"
                                                                SelectedDate="{Binding SelectedDate, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#C0C0C0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedDataOperationTypeComboBoxItem.Value}" Value="U">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DatePicker.Style>
                        </DatePicker>
                    </Grid>
                    <TextBox Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged" Margin="0,6" Tag="Search across variables" />
                    <StackPanel Margin="0,5">
                        <ComboBox Name="DataOperationTypeComboBox" Style="{StaticResource WhiteBackgroundComboBox}" ItemsSource="{Binding DataOperationTypeComboBoxItems}" SelectedItem="{Binding SelectedDataOperationTypeComboBoxItem}" DisplayMemberPath="Label" FontSize="18" Margin="0,8,0,0" />
                        <ComboBox Name="ValueTypeComboBox" Style="{StaticResource WhiteBackgroundComboBox}" ItemsSource="{Binding ModuleComboBoxItems}" SelectedItem="{Binding SelectedModuleComboBoxItem}" DisplayMemberPath="Label" FontSize="18" Margin="0,8,0,0" />
                        <ComboBox Style="{StaticResource WhiteBackgroundComboBox}" ItemsSource="{Binding DataTypesComboBoxItems}" SelectedItem="{Binding SelectedDataTypeComboBoxItem}" DisplayMemberPath="Label" FontSize="18" Margin="0,8,0,0" />
                        <ComboBox Style="{StaticResource WhiteBackgroundComboBox}" ItemsSource="{Binding SubModuleComboBoxItems}" SelectedItem="{Binding SelectedSubModuleComboBoxItem}" DisplayMemberPath="Label" FontSize="18" Margin="0,8,0,0" />
                        <ComboBox Style="{StaticResource WhiteBackgroundComboBox}"
                               ItemsSource="{Binding AccountTypeComboBoxItems}"
                               SelectedItem="{Binding SelectedAccountTypeComboBoxItem}"
                               DisplayMemberPath="Label"
                               FontSize="18"
                               Margin="0,8,0,0">
                            <ComboBox.Visibility>
                                <MultiBinding Converter="{StaticResource MultiListCountToVisibilityConverter}">
                                    <Binding Path="ModuleAccounts.Count"/>
                                    <Binding Path="ModuleAccountGroups.Count"/>
                                </MultiBinding>
                            </ComboBox.Visibility>
                        </ComboBox>
                        <ComboBox Style="{StaticResource WhiteBackgroundComboBox}"
                              ItemsSource="{Binding PeriodComboBoxItems}"
                              SelectedItem="{Binding SelectedPeriodComboBoxItem}"
                              DisplayMemberPath="Label"
                              FontSize="18"
                              Margin="0,8,0,0">
                            <ComboBox.Visibility>
                                <MultiBinding Converter="{StaticResource MultiListCountToVisibilityConverter}">
                                    <Binding Path="ModuleAccounts.Count"/>
                                    <Binding Path="ModuleAccountGroups.Count"/>
                                </MultiBinding>
                            </ComboBox.Visibility>
                        </ComboBox>
                        <ComboBox Visibility="{Binding FundsComboBoxItems.Count, Converter={StaticResource CountToVisibilityConverter}}" Style="{StaticResource WhiteBackgroundComboBox}" ItemsSource="{Binding FundsComboBoxItems}" SelectedItem="{Binding SelectedFundComboBoxItem}" DisplayMemberPath="Label" FontSize="18" Margin="0,8,0,0" />
            
                        <ComboBox Name="ModuleComboBox" Style="{StaticResource WhiteBackgroundComboBox}" ItemsSource="{Binding ValueTypeComboxBoxItems}" SelectedItem="{Binding SelectedValueTypeComboBoxItem}" DisplayMemberPath="Label" FontSize="18" Margin="0,8,0,0" />
                        <!--<DatePicker  x:Name="MyDatePicker" Margin="0,8,0,0">
                            <DatePicker.Style>
                                <Style TargetType="DatePicker">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedSubModuleComboBoxItem.Label}" Value="KPIs">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DatePicker.Style>
                        </DatePicker>-->

                        <DatePicker x:Name="MyDatePicker" Margin="0,8,0,0">
                            <DatePicker.Style>
                                <Style TargetType="DatePicker">
                                    <Setter Property="Visibility" Value="Collapsed" />

                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Height" Value="30" />
                                    <Setter Property="BorderBrush" Value="#0BA5EC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="Padding" Value="5" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DatePicker">
                                                <Grid>
                                                    <Border
                                x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <DatePickerTextBox
                                        x:Name="PART_TextBox"
                                        VerticalAlignment="Center"
                                        FontSize="{TemplateBinding FontSize}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="1" />
                                                            <Button
                                        x:Name="PART_Button"
                                        Grid.Column="1"
                                        Content="▼"
                                        Width="30"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />
                                                        </Grid>
                                                    </Border>

                                                    <Popup
                                x:Name="PART_Popup"
                                Placement="Bottom"
                                PlacementTarget="{Binding ElementName=PART_TextBox}"
                                AllowsTransparency="True"
                                IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                StaysOpen="False">
                                                        <Border
                                    Background="White"
                                    BorderBrush="#0BA5EC"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="5">
                                                            <Calendar
                                        x:Name="PART_Calendar"
                                        SelectedDate="{Binding SelectedDate, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedSubModuleComboBoxItem.Label}" Value="KPIs">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DatePicker.Style>
                        </DatePicker>

                    </StackPanel>
                </StackPanel>
                <!--<StackPanel Orientation="Horizontal">
                    <CheckBox Style="{StaticResource CustomCheckBoxStyle}" IsChecked="{Binding isUpload, Mode=TwoWay}"  Margin="5" />
                    <TextBlock Text="Upload Data" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Normal"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>-->
                <!--<TextBlock FontSize="22" FontWeight="Bold" Visibility="{Binding ModuleLabels.Count, Converter={StaticResource CountToVisibilityConverter}}">Fields</TextBlock>-->
                <ListView Name="LabelList" ItemsSource="{Binding ModuleLabels}" MouseMove="FeatureListView_MouseMove" PreviewMouseLeftButtonDown="FeatureListView_PreviewMouseLeftButtonDown" MouseDoubleClick="ListView_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <!--<CheckBox Style="{StaticResource CustomCheckBoxStyle}" Margin="5" IsChecked="{Binding Selection, Mode=TwoWay}" />-->
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <!--<Style.Triggers>
                                                    <DataTrigger Binding="{Binding Selection}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                </Style.Triggers>-->
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                    </ListView.Style>
                </ListView>
                <!--<TextBlock FontSize="22" FontWeight="Bold" Visibility="{Binding ModuleKpis.Count, Converter={StaticResource CountToVisibilityConverter}}">Kpis</TextBlock>-->
                <ListView Name="KpiList" ItemsSource="{Binding ModuleKpis}" MouseMove="KpiList_MouseMove" PreviewMouseLeftButtonDown="KpiList_PreviewMouseLeftButtonDown" MouseDoubleClick="KpiList_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <!--<CheckBox Style="{StaticResource CustomCheckBoxStyle}" Margin="5" IsChecked="{Binding Selection, Mode=TwoWay}" />-->
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <!--<Style.Triggers>
                                                    <DataTrigger Binding="{Binding Selection}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>-->
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                    </ListView.Style>
                </ListView>
                <ListView Name="AccountList" ItemsSource="{Binding ModuleAccounts}" MouseDoubleClick="AccountList_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <TextBlock Text="{Binding AccountNumber}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text=" - " VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding AccountName}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                    </ListView.Style>
                </ListView>
                <ListView Name="AccountGroupList" ItemsSource="{Binding ModuleAccountGroups}" MouseDoubleClick="AccountGroupList_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <TextBlock Text="{Binding}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Normal"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                    </ListView.Style>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
 