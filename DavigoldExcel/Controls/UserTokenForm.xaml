<UserControl x:Class="DavigoldExcel.Controls.UserTokenForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DavigoldExcel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="673.125" d:DesignWidth="473.75">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="DM Sans"/>
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="Button" >
                        <Grid Height="40">
                            <Border x:Name="buttonBorder" CornerRadius="8" BorderThickness="1" Background="#317ECE">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="4" Direction="270" Color="#C1C7CD" Opacity="0.4" BlurRadius="6" />
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Resources>
                            <DropShadowEffect x:Key="ButtonDropShadow"
                             BlurRadius="10"
                             Color="Black"
                             Direction="45"
                             Opacity="0.3" />
                        </ControlTemplate.Resources>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="buttonBorder" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="FontSize" Value="18" />
            
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#C1C7CD" />
            <Setter Property="FontFamily" Value="DM Sans"/>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            Height="{TemplateBinding Height}"
                            CornerRadius="8"
                            Padding="5">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="270" Color="#C1C7CD" Opacity="0.4" BlurRadius="6" />
                            </Border.Effect>
                            <Grid VerticalAlignment="Center">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock x:Name="PlaceholderTextBlock"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#888888"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="5" Background="White">
        <StackPanel Margin="5">
            <Image Height="50" Source="/DavigoldExcel;component/Images/logo.png" />
            <StackPanel Margin="0,5" >
                <TextBox Name="TenantUrlTextBox" Margin="0,6" Tag="Tenant URL" />
                <TextBox Name="TokenTextBox" Margin="0,6" Tag="Token" />
            </StackPanel>
            <Button Name="LoginButton" Click="Button_Click" IsDefault="True" Content="Login" />
        </StackPanel>       
    </Grid>
</UserControl>
